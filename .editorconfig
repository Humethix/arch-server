# Arch Server v5.1 - Editor Configuration
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 4
shell_variant = bash

# Python
[*.py]
indent_size = 4

# YAML (Ansible, configs)
[*.{yml,yaml}]
indent_size = 2

# Jinja2 templates
[*.j2]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab

# Taskfile
[Taskfile.yml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# TOML
[*.toml]
indent_size = 2

# Configuration files
[*.{conf,cfg,ini}]
indent_size = 4

# Nftables
[*.nft]
indent_size = 2
