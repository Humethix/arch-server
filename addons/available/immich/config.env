# =============================================================================
# Immich Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# PÅKRÆVET - Disse SKAL ændres
# -----------------------------------------------------------------------------

# Storage drev for billeder/videoer (f.eks. /dev/sdb1, /dev/nvme0n1p1)
# Dette drev vil blive formateret og mountet til Immich data
STORAGE_DEVICE="/dev/sdc"

# Storage størrelse i GB (mindst 100GB anbefales)
# Bruges til at validere at drevet er stort nok
MIN_STORAGE_GB=100

# -----------------------------------------------------------------------------
# VALGFRIT - Kan ændres efter behov
# -----------------------------------------------------------------------------

# Container images
IMAGE_VERSION="v1.106.0"

# Ports (kun localhost)
WEB_PORT=2283
MICROSERVICES_PORT=3002

# Eksponér via Cloudflare Tunnel? (true/false)
EXPOSE_EXTERNAL=false

# Subdomain hvis eksponeret
SUBDOMAIN="photos"

# Domain for tunnel
DOMAIN="humethix.dk"

# Ressource limits
# Immich kræver mere memory til image processing
SERVER_MEMORY_LIMIT="2g"
SERVER_CPU_LIMIT="2.0"
MICROSERVICES_MEMORY_LIMIT="1g"
MICROSERVICES_CPU_LIMIT="1.0"

# Database settings
DB_MEMORY_LIMIT="1g"
DB_CPU_LIMIT="1.0"
REDIS_MEMORY_LIMIT="512m"

# Immich specifikke indstillinger
# Enable machine learning for object detection (kræver mere resources)
ENABLE_MACHINE_LEARNING="true"

# Disable public signup - kun admin kan oprette brugere
DISABLE_SIGNUP="true"

# Login restrictions - kun tilladte enheder kan logge ind
# Dette kræver at enheder er tilføjet manuelt af admin
REQUIRE_DEVICE_AUTH="true"

# Concurrent thumbnail generation
THUMBNAIL_CONCURRENCY="2"

# Maximum file size (MB)
MAX_FILE_SIZE="100"

# Storage type (filesystem, s3)
STORAGE_TYPE="filesystem"

# -----------------------------------------------------------------------------
# BACKBLAZE B2 SYNKRONISERING
# -----------------------------------------------------------------------------

# Backblaze B2 konfiguration
ENABLE_BACKBLAZE_SYNC="true"

# Backblaze B2 credentials (SKAL udfyldes)
# Få dine keys fra: https://secure.backblaze.com/app_keys.htm
B2_APPLICATION_KEY_ID="DIT_APPLICATION_KEY_ID"
B2_APPLICATION_KEY="DIN_APPLICATION_KEY"

# Backblaze B2 bucket
B2_BUCKET_NAME="immich-photos"

# Synkroniseringsindstillinger
SYNC_DIRECTION="upload"  # "upload" (local -> cloud) eller "download" (cloud -> local)
SYNC_INTERVAL="3600"    # Sekunder mellem synkroniseringer (1 time)
SYNC_DELETE="false"      # Slet filer i cloud når de slettes lokalt

# Include/exclude patterns
SYNC_INCLUDE="*.jpg,*.jpeg,*.png,*.heic,*.mov,*.mp4,*.avi"
SYNC_EXCLUDE="*.tmp,*.cache"

# -----------------------------------------------------------------------------
# External storage (hvis STORAGE_TYPE="s3")
# -----------------------------------------------------------------------------
# S3_ENDPOINT=""
# S3_BUCKET=""
# S3_REGION=""
# S3_ACCESS_KEY=""
# S3_SECRET_KEY=""
