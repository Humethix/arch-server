# =============================================================================
# Seafile Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# PÅKRÆVET - Disse SKAL ændres
# -----------------------------------------------------------------------------

# Storage drev for filer (f.eks. /dev/sdc1, /dev/nvme0n1p2)
# Dette drev vil blive formateret og mountet til Seafile data
STORAGE_DEVICE=""

# Storage størrelse i GB (mindst 50GB anbefales)
# Bruges til at validere at drevet er stort nok
MIN_STORAGE_GB=50

# Seafile admin email (for første gangs setup)
ADMIN_EMAIL="admin@humethix.dk"

# Seafile admin password (lad tom for auto-generering)
ADMIN_PASSWORD=""

# -----------------------------------------------------------------------------
# VALGFRIT - Kan ændres efter behov
# -----------------------------------------------------------------------------

# Container images
SEAFILE_VERSION="11.0.8"

# Ports (kun localhost)
WEB_PORT=8080
FILE_SERVER_PORT=8082

# Eksponér via Cloudflare Tunnel? (true/false)
EXPOSE_EXTERNAL=false

# Subdomain hvis eksponeret
SUBDOMAIN="files"

# Domain for tunnel
DOMAIN="humethix.dk"

# Ressource limits - OPTIMERET BASERET PÅ HARDWARE
# Automatisk justeret baseret på tilgængelig memory og CPU
# High-end system (>16GB RAM, 4+ cores)
SERVER_MEMORY_LIMIT="2g"
SERVER_CPU_LIMIT="2.0"
# Medium system (8-16GB RAM, 2-4 cores)
# SERVER_MEMORY_LIMIT="1g"
# SERVER_CPU_LIMIT="1.5"
# Low-end system (<8GB RAM, 1-2 cores)
# SERVER_MEMORY_LIMIT="512m"
# SERVER_CPU_LIMIT="1.0"

# Database settings - OPTIMERET BASERET PÅ HARDWARE
# High-end system
DB_MEMORY_LIMIT="1g"
DB_CPU_LIMIT="1.5"
# Medium system
# DB_MEMORY_LIMIT="512m"
# DB_CPU_LIMIT="1.0"
# Low-end system
# DB_MEMORY_LIMIT="256m"
# DB_CPU_LIMIT="0.5"

REDIS_MEMORY_LIMIT="256m"

# Seafile specifikke indstillinger - OPTIMERET BASERET PÅ HARDWARE
# Maximum upload size (MB) - OPTIMERET BASERET PÅ MEMORY
# High-end system: MAX_UPLOAD_SIZE="500"
# Medium system: MAX_UPLOAD_SIZE="200"
# Low-end system: MAX_UPLOAD_SIZE="100"
MAX_UPLOAD_SIZE="200"

# Maximum concurrent uploads - OPTIMERET BASERET PÅ STORAGE
# High-end storage (NVMe): MAX_CONCURRENT_UPLOADS="10"
# Medium storage (SSD): MAX_CONCURRENT_UPLOADS="5"
# Low-end storage (HDD): MAX_CONCURRENT_UPLOADS="2"
MAX_CONCURRENT_UPLOADS="5"

# Maximum antal filer per upload
MAX_NUMBER_OF_FILES="10000"

# Time zone for Seafile
TIMEZONE="Europe/Copenhagen"

# Enable file history (kræver mere storage)
ENABLE_FILE_HISTORY="true"

# File history retention days
FILE_HISTORY_KEEP_DAYS="30"

# Storage type (filesystem, s3, azure)
STORAGE_TYPE="filesystem"

# External storage (hvis STORAGE_TYPE="s3")
# S3_ENDPOINT=""
# S3_BUCKET=""
# S3_REGION=""
# S3_ACCESS_KEY=""
# S3_SECRET_KEY=""

# Email settings (for notifikationer)
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_TLS="true"
